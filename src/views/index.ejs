<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Últimos agregados</h2>
			</div>
			<!-- Show the "visited" products -->
			<% newest.forEach(({id,name,price,description,images, discount}) => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%= images[0].file %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= toThousand(price) %></h2>
								<% if (discount > 0) { %>
									<span><%= discount %>% OFF</span>
								<% } %>
								<p><%= name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			
		   <% }) %>
			
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% inSale.forEach(({id,name,price,description,images, discount}) => { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%=id%>">
								<figure class="product-box_image">
									<img src="/images/products/<%= images[0].file %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= toThousand(price) %></h2>
									<% if (discount > 0) { %>
										<span><%= discount %>% OFF</span>
									<% } %>
									<p><%= name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
				
			   <% }) %>
		</div>
	</div>
	<!-- /Ofertas -->


	<!-- Categoria Hogar -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Categoría Hogar</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% home.products.forEach(({id,name,price,description,images, discount}) => { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%=id%>">
								<figure class="product-box_image">
									<img src="/images/products/<%= images[0].file %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= toThousand(price) %></h2>
									<% if (discount > 0) { %>
										<span><%= discount %>% OFF</span>
									<% } %>
									<p><%= name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
				
			   <% }) %>
		</div>
	</div>
	<!-- /Categoria Hogar -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>